<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/currentLocationFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.marcin.jasi.roadmemorizer.main.MainActivity"
        android:label="main_activity"
        tools:layout="@layout/main_activity" />

    <fragment
        android:id="@+id/currentLocationFragment"
        android:name="com.marcin.jasi.roadmemorizer.currentLocation.CurrentLocationFragment"
        android:label="current_location_fragment"
        tools:layout="@layout/current_location_fragment" >
        <action
            android:id="@+id/action_currentLocationFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

    <fragment
        android:id="@+id/roadLoaderFragment"
        android:name="com.marcin.jasi.roadmemorizer.roadLoader.RoadLoaderFragment"
        android:label="road_loader_fragment"
        tools:layout="@layout/road_loader_fragment" >
        <action
            android:id="@+id/action_roadLoaderFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

    <fragment
        android:id="@+id/roadsArchiveFragment"
        android:name="com.marcin.jasi.roadmemorizer.roadsArchive.RoadsArchiveFragment"
        android:label="roads_archive_fragment"
        tools:layout="@layout/roads_archive_fragment" >
        <action
            android:id="@+id/action_roadsArchiveFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

</navigation>